# 🔑 API КЛЮЧИ - ОБЯЗАТЕЛЬНО ЗАПОЛНИТЕ!

# YouTube Data API v3 Key
# 1. Перейдите на https://console.cloud.google.com/
# 2. Создайте проект или выберите существующий
# 3. Включите YouTube Data API v3
# 4. Создайте API ключ в разделе "Credentials"
YOUTUBE_API_KEY=your_youtube_api_key_here

# Gemini AI API Key (основной)
# 1. Перейдите на https://aistudio.google.com/
# 2. Создайте API ключ
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini AI API Keys (дополнительные для ротации)
# Создайте несколько ключей для избежания лимитов
# Разделяйте запятыми без пробелов
GEMINI_API_KEYS=key1,key2,key3,key4,key5

# 🚀 НАСТРОЙКИ СЕРВЕРА

# Порт для локальной разработки (Render автоматически установит свой)
PORT=8000

# 🔧 ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ

# Максимальное количество комментариев для анализа
MAX_COMMENTS=200

# Минимальная длина комментария для анализа  
MIN_COMMENT_LENGTH=3

# Поддерживаемые языки
SUPPORTED_LANGUAGES=en,ru

# Режим отладки (для разработки)
DEBUG=True
